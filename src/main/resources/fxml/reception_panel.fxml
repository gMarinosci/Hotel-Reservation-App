<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.*?>
<?import java.net.URL?>
<VBox prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="se.scandium.hotelproject.controller.fxml.ReceptionController">

    <VBox spacing="20" styleClass="header-panel">
        <JFXToolbar>
            <leftItems>
                <Label styleClass="header-text" fx:id="screenTitleText" />
            </leftItems>
            <rightItems>
                <JFXRippler style="-fx-padding:15;-fx-background-color: white;" fx:id="rippler" maskType="CIRCLE"
                            AnchorPane.rightAnchor="100.0" AnchorPane.topAnchor="100.0">
                    <JFXHamburger fx:id="burger" onMouseClicked="#loadPopup" style="-fx-padding:15;-fx-background-color: white;">
                    </JFXHamburger>
                </JFXRippler>
            </rightItems>
        </JFXToolbar>
    </VBox>



    <SplitPane dividerPositions="0.0" focusTraversable="true" nodeOrientation="LEFT_TO_RIGHT" VBox.vgrow="ALWAYS">
        <AnchorPane id="MENU" maxWidth="250.0" prefHeight="600.0" prefWidth="250.0" style="-fx-background-color: #acacac;">

            <JFXListView minWidth="250.0" prefWidth="250.0" prefHeight="800" maxHeight="1200">
                <JFXButton fx:id="roomDetailsButton" buttonType="RAISED" minWidth="220.0" prefWidth="220.0" minHeight="40.0" prefHeight="35.0" ripplerFill="TRANSPARENT" style="-fx-background-color: #0bc76f;" text="Room Details" textFill="WHITE" alignment="CENTER_LEFT">
                    <graphic>
                        <StackPane styleClass="custom-jfx-list-view-icon-container">
                            <FontIcon iconLiteral="fas-list-ul" iconSize="18" styleClass="custom-jfx-list-view-icon"/>
                        </StackPane>
                    </graphic>
                </JFXButton>
            </JFXListView>

        </AnchorPane>

        <ScrollPane prefHeight="700.0" prefWidth="900.0">
            <AnchorPane id="Content" styleClass="welcome-bg" prefHeight="700.0" prefWidth="900.0">

                <Label alignment="CENTER" layoutX="14.0" layoutY="14.0" maxHeight="517.0" maxWidth="127.0"
                       prefHeight="28.0" prefWidth="591.0" text="Welcome Page" textAlignment="CENTER"/>

            </AnchorPane>
        </ScrollPane>
    </SplitPane>
    <stylesheets>
        <URL value="@/css/style.css" />
    </stylesheets>
</VBox>
