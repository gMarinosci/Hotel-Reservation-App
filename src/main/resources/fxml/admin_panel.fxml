    <HBox prefHeight="80.0" prefWidth="900.0" styleClass="header-panel">
        <Label styleClass="header-text" text="Hotel Reservation System" />
    </HBox>

    <SplitPane dividerPositions="0.0" focusTraversable="true" nodeOrientation="LEFT_TO_RIGHT" VBox.vgrow="ALWAYS">
        <AnchorPane id="MENU" maxWidth="250.0" prefHeight="600.0" prefWidth="250.0" style="-fx-background-color: #acacac;">
            <JFXButton fx:id="addRoomButton" buttonType="RAISED" minWidth="250.0" prefWidth="250.0" ripplerFill="TRANSPARENT" style="-fx-background-color: #0bc76f;" text="Add" textFill="WHITE">
