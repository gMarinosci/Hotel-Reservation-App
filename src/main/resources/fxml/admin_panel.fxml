                    <Font size="24.0" />
                </font></JFXButton>
            <Separator layoutX="-1.0" layoutY="48.0" prefHeight="12.0" prefWidth="250.0" />
            <JFXButton buttonType="RAISED" layoutX="-1.0" layoutY="54.0" minWidth="250.0" prefWidth="250.0" ripplerFill="TRANSPARENT" style="-fx-background-color: #6c4fc5;" text="Person Control" textFill="WHITE">
                <font>
                    <Font size="24.0" />
                </font></JFXButton>
        </AnchorPane>

        <ScrollPane prefHeight="700.0" prefWidth="900.0">
            <AnchorPane id="Content" styleClass="welcome-bg" prefHeight="700.0" prefWidth="900.0">

                <Label alignment="CENTER" layoutX="14.0" layoutY="14.0" maxHeight="517.0" maxWidth="127.0"
                       prefHeight="28.0" prefWidth="591.0" text="Welcome Page" textAlignment="CENTER"/>

            </AnchorPane>
        </ScrollPane>
    </SplitPane>
    <stylesheets>
        <URL value="@/css/style.css" />
    </stylesheets>
</VBox>
